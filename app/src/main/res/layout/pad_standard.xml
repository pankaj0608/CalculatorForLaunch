<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pad_standard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pankaj_pad_numeric_background_color_white"
    app:columnCount="4"
    app:orientation="horizontal">

    <!--style="@style/PadButtonStyle.Numeric"-->

    <!--<TableRow>-->
    <Button
        android:id="@+id/buttonMemoryClear"
        style="@style/PadButtonStyle.Numeric.Memory"
        android:onClick="saveInMemory"
        android:tag="mc"
        android:text="mc"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/buttonMemoryPlus"
        style="@style/PadButtonStyle.Numeric.Memory"
        android:onClick="saveInMemory"
        android:tag="m+"
        android:text="m+"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/buttonMemoryMinus"
        style="@style/PadButtonStyle.Numeric.Memory"
        android:onClick="saveInMemory"
        android:tag="m-"
        android:text="m-"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/buttonMemoryRead"
        style="@style/PadButtonStyle.Numeric.Memory"
        android:onClick="saveInMemory"
        android:tag="mr"
        android:text="mr"
        app:layout_columnWeight="1" />

    <!--</TableRow>-->

    <!--<TableRow>-->
    <Button
        android:id="@+id/buttonSettings"
        style="@style/PadButtonStyle.Numeric.Operator"
        android:onClick="changeSettings"
        android:tag="Setting"
        android:text="Stg"
        app:layout_columnWeight="1" />

    <ImageButton
        android:id="@+id/buttonBack"
        style="@style/PadButtonStyle.Numeric.Operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calculateMe"
        android:src="@drawable/ic_backspace_white_mid_48dp"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"
        android:paddingBottom="0dp"
        android:tag="BACK"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />


