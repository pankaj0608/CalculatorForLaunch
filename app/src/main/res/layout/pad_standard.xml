    <Button
        android:id="@+id/buttonAllClear"
        style="@style/PadButtonStyle.Numeric.Operator"
        android:onClick="clearAll"
        android:tag="ALLCLEAR"
        android:text="AC"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/buttonDivide"
        style="@style/PadButtonStyle.Numeric.Operator"
        android:onClick="calculateMe"
        android:tag="/"
        android:text="รท"
        app:layout_columnWeight="1" />
    <!--</TableRow>-->


    <!--<TableRow>-->
    <Button
        android:id="@+id/buttonPercentage"
        style="@style/PadButtonStyle.Numeric"
        android:textColor="@color/pankaj_dark_orange"
        android:onClick="calculateMe"
        android:tag="%"
        android:text="%"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/buttonInverse"
        style="@style/PadButtonStyle.Numeric"
        android:onClick="calculateMe"
        android:textColor="@color/pankaj_dark_orange"
        android:tag="1/x%"
        android:text="1/x"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/buttonSignChange"
        style="@style/PadButtonStyle.Numeric"
        android:onClick="clearAll"
        android:textColor="@color/pankaj_dark_orange"
        android:tag="+/-"
        android:text="+/-"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/buttonMultiply"
        style="@style/PadButtonStyle.Numeric.Operator"
        android:onClick="calculateMe"
        android:tag="*"
        android:text="ร"
        app:layout_columnWeight="1" />
