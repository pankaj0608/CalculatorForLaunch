        android:id="@+id/button9"
        style="@style/PadButtonStyle.Numeric"
        android:onClick="calculateMe"
        android:tag="9"
        android:text="9"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/buttonSubtract"
        style="@style/PadButtonStyle.Numeric.Operator"
        android:onClick="calculateMe"
        android:tag="-"
        android:text="-"
        app:layout_columnWeight="1" />

    <!--</TableRow>-->

    <!--<TableRow>-->
    <Button
        android:id="@+id/button4"
        style="@style/PadButtonStyle.Numeric"
        android:onClick="calculateMe"
        android:tag="4"
        android:text="4"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/button5"
        style="@style/PadButtonStyle.Numeric"
        android:onClick="calculateMe"
        android:tag="5"
        android:text="5"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/button6"
        style="@style/PadButtonStyle.Numeric"
        android:onClick="calculateMe"
        android:tag="6"
        android:text="6"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/buttonAdd"
        style="@style/PadButtonStyle.Numeric.Operator"
        android:onClick="calculateMe"
        android:tag="+"
        android:text="+"
        app:layout_columnWeight="1" />

    <!--<TableRow>-->


    <!--<TableRow>-->
    <Button
        android:id="@+id/button1"
        style="@style/PadButtonStyle.Numeric"
        android:onClick="calculateMe"
        android:tag="1"
        android:text="1"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/button2"
        style="@style/PadButtonStyle.Numeric"
        android:onClick="calculateMe"
        android:tag="2"
        android:text="2"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/button3"
        style="@style/PadButtonStyle.Numeric"
        android:onClick="calculateMe"
        android:tag="3"
        android:text="3"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/buttonEquals"
        style="@style/PadButtonStyle.Numeric.Equals"
        android:onClick="calculateMe"
        android:tag="="
        android:text="="
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_rowSpan="2"/>


    <!--<TableRow>-->

    <!--<TableRow>-->

    <Button
        android:id="@+id/button00"
        style="@style/PadButtonStyle.Numeric"
        android:onClick="calculateMe"
        android:tag="00"
        android:text="00"
        app:layout_columnWeight="1" />

    <Button
        android:id="@+id/button0"
        style="@style/PadButtonStyle.Numeric"
        android:onClick="calculateMe"
        android:tag="0"
        android:text="0"
        app:layout_columnWeight="1"/>

    <Button
        android:id="@+id/buttonDecimal"
        style="@style/PadButtonStyle.Numeric"
        android:onClick="calculateMe"
        android:tag="."
        android:text="."
        app:layout_columnWeight="1" />

