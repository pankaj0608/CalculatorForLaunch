<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal">

        <!-- Row 1 starts -->

        <ImageButton
            style="@style/PadButtonStyle.Numeric.Operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_backspace_pankaj"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />


        <TextView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Limit Precision to 2 digis"
            app:layout_columnWeight="1" />

        <CheckBox app:layout_columnWeight="1" />
        <!-- Row 1 ends -->

        <!-- Row 2 starts -->
        <ImageButton
            style="@style/PadButtonStyle.Numeric.Operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_backspace_pankaj"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <TextView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Keypad Layout"
            app:layout_columnWeight="1" />

        <TextView app:layout_columnWeight="1" />
        <!-- Row 2 ends -->

        <!-- Row 3 starts -->
        <ImageButton
            style="@style/PadButtonStyle.Numeric.Operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_backspace_pankaj"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <TextView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Theme"
            app:layout_columnWeight="1" />

        <TextView app:layout_columnWeight="1" />
        <!-- Row 3 ends -->

    </GridLayout>
</LinearLayout>
