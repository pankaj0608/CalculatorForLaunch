    <!--<style name="PadButtonStyle" parent="@android:style/Widget.Material.Light.Button.Borderless">-->
    <style name="PadButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/pad_button_background</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/pankaj_pad_button_text_color_black</item>
    </style>

    <style name="PadButtonStyle.Numeric" parent="PadButtonStyle">
        <!--<item name="android:layout_margin">8dip</item>-->
        <item name="android:textSize">@dimen/_28sdp</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <!--<item name="android:paddingBottom">15dp</item>-->
        <!--<item name="android:paddingTop">15dp</item>-->
        <item name="android:layout_margin">0.1dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:layout_width">65dp </item>-->
        <!--<item name="android:layout_height">wrap_content</item>-->
    </style>


    <style name="PadButtonStyle.Numeric.Operator" parent="PadButtonStyle.Numeric">
        <item name="android:textColor">@color/pankaj_pad_button_text_color_white</item>
        <!--<item name="android:textColor">@color/pankaj_pad_button_text_color</item>-->
        <item name="android:background">@color/amaya_favourite_color</item>
    </style>

    <style name="PadButtonStyle.Numeric.Memory" parent="PadButtonStyle.Numeric.Operator">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="PadButtonStyle.Numeric.Equals" parent="PadButtonStyle.Numeric">
        <item name="android:textColor">@color/pankaj_pad_button_text_color_white</item>
        <!--<item name="android:textColor">@color/pankaj_pad_button_text_color</item>-->
        <item name="android:background">@color/pankaj_dark_less_bright_orange</item>
